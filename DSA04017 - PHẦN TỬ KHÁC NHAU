#include <bits/stdc++.h>
using namespace std;
#define faster() ios_base::sync_with_stdio(0);cin.tie(NULL);cout.tie(NULL);
const long long mod = 1e9 + 7;

int main () {
	int t;
	cin >> t;
	while (t--) {
		long long n;
		cin >> n;
		int a[n];
		int b[n];
		for (int i = 0; i < n; i++) {
			cin >> a[i];
		}
		for (int i = 0; i < n - 1; i++) {
			cin >> b[i];
		}
		for (int i = 0; i < n; i++) {
			if (a[i] != b[i]) {
				cout << i + 1 << endl;
				break;
			}
		}
	}
}
