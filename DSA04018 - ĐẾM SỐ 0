#include <bits/stdc++.h>
using namespace std;
#define faster() ios_base::sync_with_stdio(0);cin.tie(NULL);cout.tie(NULL);
const long long mod = 1e9 + 7;

int main () {
	int t;
	cin >> t;
	while (t--) {
		int n;
		cin >> n;
		int a[10000];
		int dem = 0;
		for (int i = 0; i < n; i++) {
			cin >> a[i];
			if (a[i] == 0) {
				dem++;
			}
		}
		cout << dem << endl;
	}
}
